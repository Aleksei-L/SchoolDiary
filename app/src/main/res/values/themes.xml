<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SchoolDiary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="Theme.SchoolDiary" parent="Base.Theme.SchoolDiary" />

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#2C6FB9</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
    </style>

    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">32sp</item>
    </style>
</resources>
